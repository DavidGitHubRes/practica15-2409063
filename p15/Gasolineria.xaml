<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="p15.Gasolineria"
             Title="Gasolineria">
    <VerticalStackLayout>
        <Image>

        </Image>
        <Label Text="INGRESE LA CANTIDAD DE GALONES"
               HorizontalOptions="Center"
               Margin="0,50,0,0">

        </Label>
        <Entry Placeholder="GALONES"
               Keyboard="Numeric"
               Margin="30,20,30,0"
               FontSize="20"
               BackgroundColor="White"
               x:Name="cantGal"
               TextColor="Black">

        </Entry>
        <Label Text="TOTAL A PAGAR"
               HorizontalOptions="Center"
               Margin="0,50,0,0"
               x:Name="cambioLbl">

        </Label>
        <Entry Placeholder="TOTAL A PAGAR"
               Keyboard="Numeric"
               Margin="30,20,30,0"
               FontSize="20"
               BackgroundColor="White"
               IsEnabled="False"
               x:Name="totalPagar">

        </Entry>
        <Button Text="CALCULAR"
                Margin="40"
                HeightRequest="70"
                BackgroundColor="Green"
                TextColor="White"
                x:Name="calBtn"
                Clicked="calBtn_Clicked">

        </Button>
    </VerticalStackLayout>
</ContentPage>